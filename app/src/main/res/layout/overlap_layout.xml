<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view1"
        android:layout_width="1757dp"
        android:layout_height="114dp"
        android:background="@color/blue" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/view1"
        android:scaleType="fitXY"
        android:layout_marginTop="-50dp"
        android:src="@drawable/login"/>
    <TextView
        android:id="@+id/tvText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:gravity="start"
        android:layout_margin="20sp"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:text="Username"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvText1"
        android:hint="Enter your Username"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:gravity="start"
        android:layout_margin="20sp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:text="Email"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvText2"
        android:hint="Enter your Email"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:gravity="start"
        android:layout_margin="20sp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:text="Password"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvText3"
        android:hint="Enter your Password"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_margin="20sp"
        android:text="Create Account"
        />
    <TextView
        android:id="@+id/tvText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCheck"
        android:text="You already have an account?"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_toRightOf="@+id/tvText4"
        android:layout_below="@+id/btnCheck"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/red"/>


</RelativeLayout>
